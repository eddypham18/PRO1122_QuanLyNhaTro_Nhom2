<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    cardView:cardCornerRadius="16dp"
    cardView:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFEBEE">
        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề:sdsdsd "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNoiDung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung: "
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái: "/>
                <TextView
                    android:id="@+id/tvTrangThaiXuLy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã xử lý"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvNgayTaoDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày tạo đơn: "
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/tvNgayXuLy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày xử lý: "
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTraLoi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Trả lời"
                android:layout_marginRight="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnXoa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Xóa"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#F44336" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
